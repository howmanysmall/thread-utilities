{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

	"json": {
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 120,
			"trailingCommas": "none"
		},
		"linter": {
			"enabled": true
		}
	},

	"overrides": [
		{
			"include": ["*.code-workspace", "tsconfig.json", ".vscode/extensions.json", ".vscode/**/*.code-snippets"],
			"json": {
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true
				},
				"formatter": {
					"enabled": true,
					"indentStyle": "tab",
					"indentWidth": 4,
					"lineWidth": 120,
					"trailingCommas": "all"
				},
				"linter": {
					"enabled": true
				}
			}
		}
	]
}
